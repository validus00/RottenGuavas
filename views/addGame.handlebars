<!-- WEBPAGE BODY -->
<div class="container">

    <!-- Add Game Section -->
    <div class="jumbotron">
        <h1 class="display-4">
            ADD GAME
        </h1>
        <p class="lead">
            Add a new game to the database. 
            <br>If the game already exists in the database, new genres and/or consoles can be associated with the game.</br>
        </p>
        {{!-- Horizontal row --}}
        <hr class="my-4"> 

        <!-- Add Game Form -->
        <form id="addGame" action="/addGame" method="POST">
            <div class="form-group">
                <label for="game_name">Game Name:</label>
                <input type="text" name="game_name" placeholder="Game Name" required>
            </div>
            <div class="form-group">
                <label for="release_date">Release Date:</label>
                <input type="date" name="release_date" required>
            </div>

            <!-- Consoles checkboxes form-->
            <div class="form-group">
                <label for="console_name">Console(s):</label>
                {{#each consoles}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="{{console_ID}}" name="console_selection">
                    <label class="form-check-label" for="{{console_name}}">
                        {{console_name}}
                    </label>
                </div>
                {{/each}}
            </div>

            <!-- Genres checkboxes form-->
            <div class="form-group">
                <label for="genre_name">Genre(s):</label>
                {{#each genres}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="{{genre_ID}}" name="genre_selection">
                    <label class="form-check-label" for="{{genre_name}}">
                        {{genre_name}}
                    </label>
                </div>
                {{/each}}
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" rows="5" name="description"></textarea>
            </div>

            <div class="form-group">
                <label for="photo">Game Image (url):</label>
                <input type="text" name="photo" placeholder="photo" value="{{photo}}">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button onclick="location.href='/'" type="button" class="btn btn-primary">Cancel</button>
        </form>
    </div>
</div>